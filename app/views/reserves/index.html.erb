<table>
  <thead>
    <tr>
      <th>ユーザー画像</th>
      <th>ルーム名</th>
      <th>住所</th>
      <th>ルーム紹介</th>
    </tr>
  </thead>

  <tbody>
       <tr>
         <td>
             <%= image_tag @register.image.url,class: "reserve_image" %>
         </td>
         <td><%= @register.name_room %></td>
         <td><%= @register.adress %></td>
         <td><%= @register.int_room %></td>
       </tr>
  </tbody>

</table>


<table>
  <tr>
    <th>料金</th>
    <td>
      <div>
        <%= @register.price %> /日
      </div>
    </td>
  </tr>
  <%= form_with model:@reserve, local: true do |f| %>
    <%= f.hidden_field :user_id , value: current_user.id %>
    <%= f.hidden_field :room_id , value: 1 %>

    <tr>
      <th><%= f.label :startdate ,"開始日" %></th>
      <td><%= f.date_field :start_day %></td>
    </tr>

    <tr>
      <th><%= f.label :enddate ,"終了日" %></th>
      <td><%= f.date_field :end_day %></td>
    </tr>

    <tr>
      <th><%= f.label :memo ,"人数" %></th>
      <td><%= f.number_field :guest %></td>
    </tr>
  <% end %>
</table>

<%= form_with model:@reserve, local: true do |f| %>
    <div>
      <ul>
        <li><%= f.submit "予約完了" %></li>
        <li><%= link_to "ユーザー情報一覧に戻る" ,:reserves %></li>
      </ul>
    </div>
<% end %>
