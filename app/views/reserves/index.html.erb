<table>
  <thead>
    <tr>
      <th>ユーザー画像</th>
      <th>ルーム名</th>
      <th>住所</th>
      <th>ルーム紹介</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td>
        <%= image_tag @register.image.url,class: "reserve_image" %>
      </td>
        <td><%= @register.name_room %></td>
        <td><%= @register.adress %></td>
        <td><%= @register.int_room %></td>
      </tr>
  </tbody>

</table>


<table>
<%= form_with model: @reserve,url: reserves_confirm_path, local: true do |f| %>
  <tr>
    <th><%= f.label :fee ,"料金" %></th>
    <td>
      <%= f.text_field :fee, :readonly => true,value: @register.price %> /日
    </td>
  </tr>
  <%= f.hidden_field :user_id , value: current_user.id %>
  <%= f.hidden_field :register_id , value: @register.id %>
  <tr>
    <th><%= f.label :start_day ,"開始日" %></th>
    <td><%= f.date_field :start_day %></td>
  </tr>

  <tr>
    <th><%= f.label :end_day ,"終了日" %></th>
    <td><%= f.date_field :end_day %></td>
  </tr>
  <tr>
    <th><%= f.label :guest ,"人数" %></th>
    <td><%= f.number_field :guest %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= f.submit "予約完了" %></li>
    <li><%= link_to "ユーザー情報一覧に戻る" ,:reserves %></li>
  </ul>
</div>
<% end %>
