          <br>
          <%= f.submit "探す" ,class: "form-btn"%>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="panal-area">
      <h1 class="section-title">おすすめのエリア</h1>
      <div class="panel-items">

        <div class="panel-item">
          <%= search_form_for @q, url: registers_search_path do |f| %>
