.top{
    box-sizing: border-box;
    display: block;
}
.top-main{
    background-image: url("<%= asset_path('img_cover_top.jpeg') %>");
    background-size: cover;
    widows: 100%;
    height: 650px;
}
.form-fream{
    height: 650px;
    display: flex;
    align-items: center;
}
.form-area{
    background: #fff;
    padding: 24px;
    border-radius: 5px;
    margin-right: auto;
    margin-left: auto;
}
.form-are-title{
    font-size: 28px;
    line-height: 33px;
    letter-spacing: 1px;
}
.form-area-form{
    font-size: 13px;
}
.form-field{
    width: 100%;
    border: 1px solid #ced4da;
    border-radius: 0.25rem;
    padding: 0.375rem 0.75rem;
    margin-bottom: 0.5rem;
}
.form-btn{
    font-size: 17px;
    color: #fff;
    background-color: #4a90e2;
    border-color: #007bff;
    width: 100%;
    margin-bottom: 1.5rem;
    height: 40px;
}

.container {
    max-width: 540px;
    width: 100%;
    padding-right: 15px;
    padding-left: 15px;
    margin-right: auto;
    margin-left: auto;
}
.section-title{
    font-size: 24px;
    margin: 35px 0;
    font-weight: bold;
}
.panel-items{
    display: flex;
    flex-wrap: wrap;
    margin-right: -20px;
    margin-left: -20px;
}
.top span{
    position: absolute;
    bottom: 50px;
    left: 0;
    right: 0;
    color: white;
    font-weight: bold;
    z-index: 1;
    margin: auto;
    text-align: center;
    font-size: 24px;
}
.panel-item{
    position: relative;
    max-width: 50%;
    padding-right: 20px;
    padding-left: 15px;

}
.panel-img{
    width: 110px;
    height: 150px;
}
